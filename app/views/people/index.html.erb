<div class="container">
  <p id="notice"><%= notice %></p>

  <h3>People</h3>

  <table>
    <thead>
      <tr>
        <th>Person code</th>
        <th>Name</th>
        <th>Identification number</th>
        <th>Street</th>
        <th>City</th>
        <th>State</th>
        <th>Zip code</th>
        <th>Complement</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Catastrophe</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @people.each do |person| %>
        <tr>
          <td><%= person.person_code %></td>
          <td><%= person.name %></td>
          <td><%= person.identification_number %></td>
          <td><%= person.street %></td>
          <td><%= person.city %></td>
          <td><%= person.state %></td>
          <td><%= person.zip_code %></td>
          <td><%= person.complement %></td>
          <td><%= person.email %></td>
          <td><%= person.phone %></td>
          <td><%= person.catastrophe_id %></td>
          <td><%= button_to 'Show', person, method: :get %></td>
          <td><%= button_to 'Edit', edit_person_path(person), method: :get %></td>
          <td><%= button_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= button_to 'New Person', new_person_path, method: :get %></td>
</div>