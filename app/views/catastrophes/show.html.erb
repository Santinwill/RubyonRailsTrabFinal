<div class="container">
  <p id="notice"><%= notice %></p>

  <p>
    <strong>Catastrophe code:</strong>
    <%= @catastrophe.catastrophe_code %>
  </p>

  <p>
    <strong>Name:</strong>
    <%= @catastrophe.name %>
  </p>

  <p>
    <strong>Degree of emergency:</strong>
    <%= @catastrophe.degree_of_emergency %>
  </p>

  <div class="row">
    <div class="col s1">
      <p><%= button_to 'Edit', edit_catastrophe_path(@catastrophe), method: :get, style: 'background-color: blue;', class: 'btn' %></p>
    </div>
    <div class="col s5">
      <p><%= button_to "New Person", "/people/new", method: :get, style: 'background-color: blue;', class: 'btn' %></p>
    </div>
    <div class="col s6 right-align">
      <p><%= button_to 'Back', catastrophes_path, method: :get, style: 'background-color: blue;', class: 'btn' %></p>
    </div>
  </div>
</div>